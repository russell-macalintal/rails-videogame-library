<!DOCTYPE html>
<html>
  <head>
    <title>RailsVideogameLibrary</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="top-menu">
      <h1>RAILS VIDEOGAME LIBRARY</h1>
        <nav>
          <span><%= link_to "HOME", root_url %></span>
          <span><%= link_to "CONSOLES", consoles_path %></span>
          <span><%= link_to "GAMES", games_path %></span>
          <% if logged_in? %>
            <span><%= link_to "MY PROFILE", user_path(current_user) %></span>
            <span><%= link_to "USERS", users_path%></span>
            <span><%=link_to "LOGOUT", logout_path %></span>
          <% end %>
        </nav>
    </div>
    <%= yield %>
  </body>
</html>
