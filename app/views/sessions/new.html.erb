<h1>Please Log In</h1>

<% if flash[:error] %>
    <div class="errors" ><%= flash[:error] %></div>
<% end %>

<%= form_tag '/login' do %>
    <%= label_tag 'Username:' %>
    <%= text_field_tag :username %><br>
    <%= label_tag 'Password: ' %>
    <%= text_field_tag :password %><br>
    <%= submit_tag 'Log In' %>
<% end %>
<br><br>

<h3>Or Log In Through:</h3>
<h3><%= link_to 'Facebook', '/auth/facebook', method: :post %></h3>